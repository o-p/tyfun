{
  "compilerOptions": {
    "baseUrl": "src/",
    "declaration": true,
    "declarationDir": "build/types",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build/js/",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./tests/",
    "./example/"
  ],
  "lib": [
    "ES2015",
    "ES2016",
    "ES2017"
  ]
}
